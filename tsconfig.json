{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": ".artifacts",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  // we exclude these files to save typescript from having to go through them
  "exclude": [
    ".artifacts",
    ".cache",
    ".circleci",
    ".github",
    ".vscode",
    "documentation",
    "node_modules"
  ],
  "typedocOptions": {
    "exclude": "**/__tests__/*.ts",
    "excludeExternals": true,
    "excludePrivate": true,
    "hideGenerator": true,
    "includeDeclarations": true,
    "mode": "file",
    "name": "Accounting CLI",
    "out": "documentation",
    "readme": "none",
    "theme": "markdown"
  }
}
